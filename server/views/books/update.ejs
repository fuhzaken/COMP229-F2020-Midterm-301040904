<!--Contains the header of the page-->
<%- include ../partials/header.ejs -%>


<!-- Content for the Edit Page-->
<div class="container">
     <div class="row">
          <div class="offset-md-2 col-md-8">
               <h1><%= title %></h1>

               <form class="form" method="POST">
                    <!-- name of the book input-->
                    <div class="form-group">
                         <label for="nameTextField">Title</label>
                         <input type="text" class="form-control"
                         id="nameTextField"
                         placeholder="Enter the name of the book title"
                         name="Title" 
                         value="<%= book.Title %>"
                         required>                    
                    </div>
                    <!-- Price input-->
                    <div class="form-group">
                         <label for="priceTextField">Price</label>
                         <input type="text" class="form-control"
                         id="PriceTextField"
                         placeholder="Enter the book's price"
                         name="Price" 
                         value="<%= book.Price %>"
                         required>                    
                    </div>
                    <!-- Author input-->
                    <div class="form-group">
                         <label for="authorTextField">Author</label>
                         <input type="text" class="form-control"
                         id="AuthorTextField"
                         placeholder="Enter the name of the book's author"
                         name="Author"
                         value="<%= book.Author %>"
                         required>                    
                    </div>
                    <!-- Publication year input-->
                    <div class="form-group">
                         <label for="publishedTextField">Genre</label>
                         <input type="text" class="form-control"
                         id="GenreTextField"
                         placeholder="Enter the Genre"
                         name="Genre" 
                         value="<%= book.Genre %>"
                         required>                    
                    </div>
                    
                    
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
                    <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
               </form>
          </div>
     </div>
</div>


<!--Contains the footer of the page-->
<%- include ../partials/footer.ejs -%>
